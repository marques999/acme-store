<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="@dimen/elevation_medium"
  card_view:cardUseCompatPadding="true">
  <LinearLayout style="@style/card_container">
    <ImageView
      style="@style/card_image"
      android:contentDescription="@string/global_todo"
      android:src="@drawable/ic_credit_card_48dp" />
    <GridLayout style="@style/card_grid">
      <TextView
        android:id="@+id/cc_number"
        style="@style/card_header" />
      <TextView
        style="@style/card_item"
        android:text="@string/card_type" />
      <TextView
        android:id="@+id/cc_type"
        style="@style/card_description" />
      <TextView
        style="@style/card_item"
        android:text="@string/card_validity" />
      <TextView
        android:id="@+id/cc_validity"
        style="@style/card_description" />
    </GridLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>