<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardBackgroundColor="@color/colorAccent"
  card_view:cardCornerRadius="0dp"
  card_view:cardElevation="@dimen/details_mediumElevation"
  card_view:cardUseCompatPadding="true">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/global_largeMargin">

    <ImageView
      android:id="@+id/cc_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="@dimen/global_largeMargin"
      android:contentDescription="@string/details_iconDescription"
      android:src="@drawable/ic_credit_card_48dp" />

    <TextView
      android:id="@+id/cc_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="@dimen/details_innerMargin"
      android:layout_toEndOf="@+id/cc_icon"
      android:textSize="@dimen/global_largeFont" />

    <TextView
      android:id="@+id/cc_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/cc_number"
      android:layout_marginBottom="@dimen/global_smallMargin"
      android:layout_toEndOf="@+id/cc_icon"
      android:textSize="@dimen/global_mediumFont" />

    <TextView
      android:id="@+id/label_validity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/cc_type"
      android:layout_toEndOf="@+id/cc_icon"
      android:text="@string/details_ccValidity"
      android:textSize="@dimen/global_mediumFont"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/cc_validity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/cc_type"
      android:layout_toEndOf="@+id/label_validity"
      android:textSize="@dimen/global_mediumFont" />
  </RelativeLayout>
</android.support.v7.widget.CardView>