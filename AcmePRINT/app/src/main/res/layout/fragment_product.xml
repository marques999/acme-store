<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardBackgroundColor="@color/colorPrimaryDarker"
  card_view:cardElevation="@dimen/elevation_medium"
  card_view:cardUseCompatPadding="true">
  <ImageView
    android:id="@+id/product_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.10"
    android:contentDescription="@string/global_todo"
    android:scaleType="centerCrop" />
  <LinearLayout style="@style/card_container">
    <TextView
      android:id="@+id/product_quantity"
      style="@style/card_image"
      android:gravity="center"
      android:textDirection="firstStrong"
      android:textSize="@dimen/font_large"
      android:textStyle="bold" />
    <GridLayout style="@style/card_grid">
      <TextView
        android:id="@+id/product_name"
        style="@style/card_header"
        android:textSize="24sp" />
      <TextView
        style="@style/card_item"
        android:text="@string/product_barcode" />
      <TextView
        android:id="@+id/product_barcode"
        style="@style/card_description" />
      <TextView
        style="@style/card_item"
        android:text="@string/product_price" />
      <TextView
        android:id="@+id/product_price"
        style="@style/card_description" />
      <TextView
        style="@style/card_item"
        android:text="@string/product_total" />
      <TextView
        android:id="@+id/product_total"
        style="@style/card_description" />
    </GridLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>