<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/cardView_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/global_largeMargin">

      <ImageView
        android:id="@+id/profile_customerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/global_largeMargin"
        android:contentDescription="@string/global_todoDescription"
        android:src="@drawable/ic_person_48dp" />

      <TextView
        android:id="@+id/profile_customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/profile_customerIcon"
        android:textSize="@dimen/global_largeFont" />

      <TextView
        android:id="@+id/profile_customerAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_customerName"
        android:layout_toEndOf="@+id/profile_customerIcon"
        android:textSize="@dimen/global_mediumFont" />

      <TextView
        android:id="@+id/profile_customerAddress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_customerAddress1"
        android:layout_toEndOf="@+id/profile_customerIcon"
        android:textSize="@dimen/global_mediumFont" />

      <TextView
        android:id="@+id/profile_customerNif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_customerAddress2"
        android:layout_toEndOf="@+id/profile_customerIcon"
        android:textSize="@dimen/global_mediumFont" />
    </RelativeLayout>
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/cardView_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/global_largeMargin">

      <ImageView
        android:id="@+id/profile_cardIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/global_largeMargin"
        android:contentDescription="@string/global_todoDescription"
        android:src="@drawable/ic_credit_card_48dp" />

      <TextView
        android:id="@+id/profile_cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/orderView_innerMargin"
        android:layout_toEndOf="@+id/profile_cardIcon"
        android:textSize="@dimen/global_largeFont" />

      <TextView
        android:id="@+id/profile_cardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_cardNumber"
        android:layout_marginBottom="@dimen/global_smallMargin"
        android:layout_toEndOf="@+id/profile_cardIcon"
        android:textSize="@dimen/global_mediumFont" />

      <TextView
        android:id="@+id/label_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_cardType"
        android:layout_toEndOf="@+id/profile_cardIcon"
        android:text="@string/customerProfile_ccValidity"
        android:textSize="@dimen/global_mediumFont"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/profile_cardValidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_cardType"
        android:layout_toEndOf="@+id/label_validity"
        android:textSize="@dimen/global_mediumFont" />
    </RelativeLayout>
  </android.support.v7.widget.CardView>

  <Button
    android:id="@+id/profile_qrTest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/global_largeMargin"
    android:padding="?attr/dialogPreferredPadding"
    android:text="TEST QR GENERATION" />
</LinearLayout>