<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".customers.CustomerProfileFragment">

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/cardView_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/cardView_margin">

      <ImageView
        android:id="@+id/customerProfile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/cardView_margin"
        android:contentDescription="@string/customerProfile_icon"
        android:src="@drawable/ic_person_48dp" />

      <TextView
        android:id="@+id/customerProfile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/customerProfile_icon"
        android:textSize="30sp" />

      <TextView
        android:id="@+id/customerProfile_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerProfile_name"
        android:layout_toEndOf="@+id/customerProfile_icon"
        android:textSize="@dimen/global_mediumFont" />

      <TextView
        android:id="@+id/customerProfile_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerProfile_address1"
        android:layout_toEndOf="@+id/customerProfile_icon"
        android:textSize="@dimen/global_mediumFont" />

      <TextView
        android:id="@+id/customerProfile_nif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerProfile_address2"
        android:layout_toEndOf="@+id/customerProfile_icon"
        android:textSize="@dimen/global_mediumFont" />
    </RelativeLayout>
  </android.support.v7.widget.CardView>

  <ImageView
    android:id="@+id/qrCode_imageView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qrCode_imageView"
    android:layout_gravity="center"
    android:padding="@dimen/cardView_margin" />

  <TextView
    android:id="@+id/qrCode_textView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="Hello World!"
    android:textAlignment="center" />

</LinearLayout>