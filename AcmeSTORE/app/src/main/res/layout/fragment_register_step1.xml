<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingEnd="@dimen/global_largeMargin"
  android:paddingStart="@dimen/global_largeMargin"
  android:paddingTop="@dimen/global_mediumMargin">
  <android.support.design.widget.TextInputLayout style="@style/global_textInput">
    <EditText
      android:id="@+id/registerActivity_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/customer_name"
      android:inputType="textPersonName" />
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout style="@style/global_textInput">
    <EditText
      android:id="@+id/registerActivity_username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/customer_username"
      android:inputType="textPersonName" />
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout style="@style/global_textInput">
    <EditText
      android:id="@+id/registerActivity_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/customer_password"
      android:inputType="textPassword" />
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout style="@style/global_textInput">
    <EditText
      android:id="@+id/registerActivity_confirm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/register_confirm"
      android:inputType="textPassword" />
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout style="@style/global_textInput">
    <EditText
      android:id="@+id/registerActivity_address1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/register_address1"
      android:inputType="textPostalAddress" />
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout style="@style/global_textInput">
    <EditText
      android:id="@+id/registerActivity_address2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/register_address2"
      android:inputType="textPostalAddress" />
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout style="@style/global_textInput">
    <EditText
      android:id="@+id/registerActivity_nif"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/register_nif"
      android:maxLength="9"
      android:inputType="number" />
  </android.support.design.widget.TextInputLayout>
  <android.support.v7.widget.AppCompatButton
    android:id="@+id/registerActivity_next"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/global_mediumMargin"
    android:drawableEnd="@drawable/ic_chevron_right_24dp"
    android:padding="@dimen/registerActivity_button"
    android:text="@string/register_next" />
</LinearLayout>