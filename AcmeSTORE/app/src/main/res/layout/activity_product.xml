<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".products.ProductViewActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardElevation="@dimen/cardView_elevation"
      card_view:cardPreventCornerOverlap="true"
      card_view:cardUseCompatPadding="true">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cardView_halfMargin">

        <TextView
          android:id="@+id/productView_brand"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/cardView_quarterMargin"
          android:textSize="@dimen/productView_brand"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/productView_model"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:textSize="@dimen/productView_model" />
      </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardElevation="@dimen/cardView_elevation"
      card_view:cardPreventCornerOverlap="true"
      card_view:cardUseCompatPadding="true">

      <ImageView
        android:id="@+id/productView_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/productView_photo"
        android:layout_margin="@dimen/cardView_margin"
        android:contentDescription="@string/productView_photo" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardElevation="@dimen/cardView_elevation"
      card_view:cardPreventCornerOverlap="true"
      card_view:cardUseCompatPadding="true">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingEnd="@dimen/cardView_quarterMargin"
        android:paddingStart="@dimen/cardView_halfMargin">

        <TextView
          android:id="@+id/productView_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:paddingTop="@dimen/cardView_margin"
          android:text="@string/productView_price"
          android:textColor="@android:color/white"
          android:textStyle="bold" />

        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1" />

        <Button
          android:id="@+id/productView_minus"
          android:layout_width="@dimen/shoppingCart_button"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:backgroundTint="@android:color/white"
          android:text="@string/shoppingCart_minus"
          android:textColor="@color/colorAccent" />

        <TextView
          android:id="@+id/productView_quantity"
          android:layout_width="@dimen/shoppingCart_quantity"
          android:layout_height="wrap_content"
          android:text="@string/shoppingCart_quantity"
          android:textAlignment="center"
          android:textColor="@android:color/white"
          android:textStyle="bold" />

        <Button
          android:id="@+id/productView_plus"
          android:layout_width="@dimen/shoppingCart_button"
          android:layout_height="wrap_content"
          android:backgroundTint="@android:color/white"
          android:text="@string/shoppingCart_plus"
          android:textColor="@color/colorAccent" />
      </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardElevation="@dimen/cardView_elevation"
      card_view:cardPreventCornerOverlap="true"
      card_view:cardUseCompatPadding="true">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cardView_halfMargin">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/cardView_halfMargin"
          android:text="@string/productView_barcode"
          android:textSize="@dimen/cardView_mediumFont"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/productView_barcode"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/cardView_halfMargin"
          android:textSize="@dimen/cardView_smallFont" />
      </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardElevation="@dimen/cardView_elevation"
      card_view:cardPreventCornerOverlap="true"
      card_view:cardUseCompatPadding="true">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cardView_halfMargin">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/cardView_halfMargin"
          android:text="@string/productView_description"
          android:textSize="@dimen/cardView_mediumFont"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/productView_description"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:lineSpacingMultiplier="1.2"
          android:textSize="@dimen/cardView_smallFont" />
      </LinearLayout>
    </android.support.v7.widget.CardView>
  </LinearLayout>
</ScrollView>