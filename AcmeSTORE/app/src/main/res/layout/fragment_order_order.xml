<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="@dimen/elevation_medium"
  card_view:cardUseCompatPadding="true">
  <LinearLayout style="@style/table_parent">
    <ImageView
      style="@style/table_left"
      android:contentDescription="@string/global_todo"
      android:src="@drawable/ic_cart_48dp" />
    <TableLayout style="@style/table_rightContainer">
      <TableRow
        style="@style/table_row"
        android:layout_marginBottom="@dimen/margin_small">
        <TextView
          android:id="@+id/orderView_orderTotal"
          style="@style/table_header" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/global_items" />
        <TextView
          android:id="@+id/orderView_items"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/global_token" />
        <TextView
          android:id="@+id/orderView_token"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/global_created" />
        <TextView
          android:id="@+id/orderView_createdAt"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/global_updated" />
        <TextView
          android:id="@+id/orderView_modifiedAt"
          style="@style/row_content" />
      </TableRow>
    </TableLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>