<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <LinearLayout style="@style/global_buttonGroup">
    <Button
      android:id="@+id/shoppingCart_scan"
      style="@style/global_button"
      android:drawableStart="@drawable/ic_camera_24dp"
      android:text="@string/shoppingCart_scan" />
    <Button
      android:id="@+id/shoppingCart_checkout"
      style="@style/global_button"
      android:drawableStart="@drawable/ic_check_24dp"
      android:enabled="false"
      android:text="@string/shoppingCart_checkout" />
  </LinearLayout>
  <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardCornerRadius="0dp"
      card_view:cardElevation="@dimen/cardView_elevation"
      card_view:cardPreventCornerOverlap="true"
      card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/global_mediumMargin">

                <TextView
                    android:id="@+id/item_quantity_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/items_cart" />

                <TextView
                    android:id="@+id/subtotal_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/price_cart" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/cardview_dark_background"
          android:orientation="vertical">

        <LinearLayout
            android:id="@+id/product_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/global_mediumMargin">

            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

            <TextView
                android:id="@+id/cart_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/global_mediumFont"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#343434" />
          </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.RecyclerView
    android:id="@+id/shoppingCart_recyclerView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />
</LinearLayout>