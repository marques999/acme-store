<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardElevation="@dimen/elevation_medium"
  app:cardUseCompatPadding="true">
  <LinearLayout style="@style/table_parent">
    <ImageView
      style="@style/table_left"
      android:contentDescription="@string/global_todo"
      android:src="@drawable/ic_person_48dp" />
    <TableLayout style="@style/table_rightContainer">
      <TableRow
        style="@style/table_row"
        android:layout_marginBottom="@dimen/margin_small">
        <TextView
          android:id="@+id/profile_name"
          style="@style/table_header" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/customer_nif" />
        <TextView
          android:id="@+id/profile_nif"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/customer_username" />
        <TextView
          android:id="@+id/profile_username"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/customer_address1" />
        <TextView
          android:id="@+id/profile_address1"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/customer_address2" />
        <TextView
          android:id="@+id/profile_address2"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/customer_country" />
        <TextView
          android:id="@+id/profile_country"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/global_created" />
        <TextView
          android:id="@+id/profile_created"
          style="@style/row_content" />
      </TableRow>
      <TableRow style="@style/table_row">
        <TextView
          style="@style/row_header"
          android:text="@string/global_updated" />
        <TextView
          android:id="@+id/profile_updated"
          style="@style/row_content" />
      </TableRow>
    </TableLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>